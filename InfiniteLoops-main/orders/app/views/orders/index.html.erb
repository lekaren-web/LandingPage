<h1>All Orders</h1>

<table>
  <tr>
    <th>Order ID</th>
    <th>Customer ID</th>
    <th>Total</th>
    <th>Status</th>
    <th />
  </tr>

  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.customer_id %></td>
      <td><%= order.total %></td>
      <td><%= order.status %></td>
      <td><%= link_to 'edit', edit_order_path(order) %></td>
    </tr>
  <% end %>
</table>
