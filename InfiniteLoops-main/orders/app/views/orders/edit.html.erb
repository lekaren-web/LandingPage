<h1>Edit Order</h1>

<%= form_with(model: @order, local: true) do |form| %>

  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@order.errors.count, "error") %> kept us from updating
      </h2>

      <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :customer_id %><br>
    <%= form.text_field :customer_id %>
  </p>

  <p>
    <%= form.label :total %><br>
    <%= form.text_field :total %>
  </p>
        
  <p>
    <%= form.label :status %><br>
    <%= form.select :status, [Order::PROCESSING, Order::CANCELLED, Order::COMPLETE] %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', orders_path %>
